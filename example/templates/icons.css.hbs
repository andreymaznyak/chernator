$baseUrl: '{ externalBaseUrl }';
@font-face {
  font-family: "iconfont";
  src: url($baseUrl + "fonts/icon/iconfont.eot") format("embedded-opentype"),
  url($baseUrl + "fonts/icon/iconfont.woff2") format("woff2"),
  url($baseUrl + "fonts/icon/iconfont.woff") format("woff");
}

@mixin make-icon-font() {
  font-family: {{fontName}} !important;
  font-weight: normal;
  font-style: normal;
  font-size: 20px;  /* Preferred icon size */
  display: inline-block;
  line-height: 1;
  text-transform: none;
  letter-spacing: normal;
  word-wrap: normal;
  white-space: nowrap;
  direction: ltr;

  /* Support for all WebKit browsers. */
  -webkit-font-smoothing: antialiased;
  /* Support for Safari and Chrome. */
  text-rendering: optimizeLegibility;

  /* Support for Firefox. */
  -moz-osx-font-smoothing: grayscale;

  /* Support for IE. */
  font-feature-settings: 'liga';
}
